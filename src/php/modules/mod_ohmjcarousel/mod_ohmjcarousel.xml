<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
  <name>ohmj-carousel</name>
  <creationDate>15 December 2015</creationDate>
  <authorEmail>contact@ohmj.fr</authorEmail>
  <author>OHMJ</author>
  <version>1.0.0</version>
  <description>Carousel for banner, use with OHMJ theme</description>
  <files>
    <filename>mod_ohmjcarousel.xml</filename>
    <filename module="mod_ohmjcarousel">mod_ohmjcarousel.php</filename>
    <filename>index.html</filename>
    <filename>helper.php</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/index.html</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field
          name="count"
          type="integer"
          label="Total articles to show"
          default="3"
          first="1"
          last="5"
          step="1" />
      </fieldset>
    </fields>
  </config>
</extension>
